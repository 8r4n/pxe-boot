# PXE Boot Menu Configuration
# Production-ready boot menu with multiple OS options

# Global configuration
DEFAULT menu.c32
PROMPT 0
TIMEOUT ${PXE_BOOT_TIMEOUT}
ONTIMEOUT ${PXE_DEFAULT_BOOT}

# Menu configuration
MENU TITLE PXE Boot Server - Select OS to Install
MENU BACKGROUND bg.png
MENU COLOR border 30;44 #00000000 #00000000 none
MENU COLOR sel 7;37;40 #ffffffff #76a1d0ff all
MENU COLOR title 1;36;44 #ffffffff #00000000 all
MENU COLOR tabmsg 31;40 #80ffff00 #00000000 all
MENU COLOR unsel 37;44 #ffffffff #00000000 all
MENU COLOR help 37;40 #ffff0000 #00000000 all
MENU COLOR timeout_msg 37;40 #ffffffff #00000000 all
MENU COLOR timeout 1;37;40 #ffffffff #00000000 all

# Boot options
LABEL local
    MENU LABEL ^Local Boot (Default)
    MENU DEFAULT
    LOCALBOOT 0

LABEL rhel9
    MENU LABEL Install Red Hat Linux 9
    KERNEL http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel9/vmlinuz
    APPEND initrd=http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel9/initrd.img inst.repo=http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel9/ inst.ks=http://${HTTP_SERVER_IP}:${NGINX_PORT}/kickstart/rhel9.ks
    TEXT HELP
        Install Red Hat Linux 9 from network repository.
        This will perform an automated installation using kickstart.
    ENDTEXT

LABEL rhel10
    MENU LABEL Install Red Hat Linux 10
    KERNEL http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel10/vmlinuz
    APPEND initrd=http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel10/initrd.img inst.repo=http://${HTTP_SERVER_IP}:${NGINX_PORT}/images/rhel10/ inst.ks=http://${HTTP_SERVER_IP}:${NGINX_PORT}/kickstart/rhel10.ks
