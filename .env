# PXE Boot Server Environment Configuration
# Copy this file to .env and modify values for your environment

# =============================================================================
# DHCP Configuration
# =============================================================================

# Network subnet for DHCP server
DHCP_SUBNET=192.168.1.0

# Network mask for the subnet
DHCP_NETMASK=255.255.255.0

# IP address range for DHCP leases
DHCP_RANGE_START=192.168.1.100
DHCP_RANGE_END=192.168.1.200

# Default gateway/router IP
DHCP_ROUTER=192.168.1.1

# DNS servers (comma-separated)
DHCP_DNS=8.8.8.8,1.1.1.1

# DNS domain name
DHCP_DOMAIN=localdomain

# DHCP lease time in seconds (default: 24 hours)
DHCP_LEASE_TIME=86400

# =============================================================================
# Nginx Configuration
# =============================================================================

# HTTP server port for serving OS images
NGINX_PORT=8080

# Number of Nginx worker processes
NGINX_WORKER_PROCESSES=auto

# Maximum connections per worker
NGINX_WORKER_CONNECTIONS=1024

# =============================================================================
# PXE Boot Configuration
# =============================================================================

# Boot menu timeout in 1/10 seconds (50 = 5 seconds)
PXE_BOOT_TIMEOUT=50

# Default boot option when timeout expires
PXE_DEFAULT_BOOT=local

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# =============================================================================
# Security Configuration
# =============================================================================

# Networks allowed to access PXE services (comma-separated CIDR)
ALLOWED_NETWORKS=192.168.1.0/24
